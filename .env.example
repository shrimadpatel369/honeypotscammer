# Application Settings
APP_NAME=Honeypot Scam Detection API
ENV=production
DEBUG=False
API_KEY=your-secret-api-key-here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=honeypot_db

# Google Gemini API (Premium)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-thinking-exp
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=30   

# GUVI Callback
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# Server Configuration
HOST=0.0.0.0
# Note: PORT is automatically set by Cloud Run (typically 8080)
# Do NOT set PORT in Cloud Run environment variables - it's reserved
WORKERS=4

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60
ENABLE_CACHING=True
CACHE_TTL=300

# Security
CORS_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=100
