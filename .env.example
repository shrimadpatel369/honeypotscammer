# Application Settings
API_KEY=your-secret-api-key-here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=honeypot_db

# Google Gemini API (Premium)
GEMINI_API_KEY=your-gemini-api-key-here

# GUVI Callback (Use mock for testing, real URL for production submission)
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult
# GUVI_CALLBACK_URL=http://localhost:8000/api/v1/mock-callback

# Server Configuration
HOST=0.0.0.0
# Note: PORT is automatically set by Cloud Run (typically 8080)
# Do NOT set PORT in Cloud Run environment variables - it's reserved
WORKERS=4

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60
ENABLE_CACHING=True
CACHE_TTL=300

# Security
CORS_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=100
